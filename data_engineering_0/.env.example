# Environment Variables Template
# Copy this to .env for local development

# Cloudflare API Token (for wrangler commands)
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token_here

# Worker Domain (update after first deploy)
WORKER_HOST=poland-weather-lake.your-subdomain.workers.dev

# Database IDs (update after creating resources)
D1_DATABASE_ID=your-d1-database-id
KV_NAMESPACE_ID=your-kv-namespace-id

# Optional: Custom R2 bucket name (default: weather-snapshots)
R2_BUCKET_NAME=weather-snapshots